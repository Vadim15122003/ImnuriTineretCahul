<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:background="#3CAEFB"
    android:id="@+id/right_corner_options">
    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/btnclose"
        android:text="x"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/buton_close_press"
        android:layout_marginLeft="5dp"
        android:clickable="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="65dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:id="@+id/linearlay"
        >
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AratÄƒ acordurile"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:background="#000000"
        android:layout_below="@+id/linearlay"
        android:id="@+id/linear"
        android:orientation="horizontal" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear"
        android:padding="5dp"
        android:id="@+id/linear2">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play_circle"
            android:layout_gravity="center"
            android:id="@+id/player_btn"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="90dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pause_circle"
            android:layout_gravity="center"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="90dp"
            android:id="@+id/player_btn_pause"
            android:visibility="gone"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear2"
            android:id="@+id/linear3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/player_position"
                android:text="00:00" />
            <SeekBar
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/player_track"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/player_duration"
                android:text="00:00" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:background="#000000"
        android:layout_below="@+id/linear3"
        android:id="@+id/linear4"
        android:orientation="horizontal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Original"
        android:textSize="20dp"
        android:layout_below="@+id/linear"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/txt_right1"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_fast_forward"
        android:id="@+id/fast_forward"
        android:layout_below="@id/linear"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="55dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_fast_rewind"
        android:id="@+id/fast_rewind"
        android:layout_below="@id/linear"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:layout_marginStart="35dp"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear_notePdf"
            android:layout_below="@+id/linear3">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Note Pdf"
                android:textAlignment="center"
                android:layout_margin="10dp"/>
        </LinearLayout>>
</RelativeLayout>