<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:background="#3CAEFB"
    android:id="@+id/right_corner_options">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="65dp"
        android:layout_marginStart="5dp"
        android:id="@+id/linearlay"
        >
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Arată acordurile"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:background="#000000"
        android:layout_below="@+id/linearlay"
        android:id="@+id/linear"
        android:orientation="horizontal" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/audioElements"
        android:orientation="vertical"
        android:layout_below="@+id/linear"

        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/linear2">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play_circle"
            android:layout_gravity="center"
            android:id="@+id/player_btn"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="90dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pause_circle"
            android:layout_gravity="center"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="90dp"
            android:id="@+id/player_btn_pause"
            android:visibility="gone"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear2"
            android:id="@+id/linear3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/player_position"
                android:layout_marginLeft="5dp"
                android:text="00:00" />
            <SeekBar
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/player_track"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/player_duration"
                android:layout_marginRight="5dp"
                android:text="00:00" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:background="#000000"
        android:layout_below="@+id/audioMiss"
        android:id="@+id/linear4"
        android:orientation="horizontal" />
    <TextView
        android:id="@+id/txt_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:text="Stergeți"
        android:textSize="15dp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_fast_forward"
        android:id="@+id/fast_forward"
        android:layout_below="@id/linear"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="55dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_fast_rewind"
        android:id="@+id/fast_rewind"
        android:layout_below="@id/linear"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:layout_marginStart="35dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/audioMiss"
        android:layout_below="@+id/audioElements">
        <Button
            android:id="@+id/btnAudioUpdateone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descarcă audio"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear_notePdf"
            android:layout_below="@+id/linear4">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Note Pdf"
                android:textAlignment="center"
                android:layout_margin="10dp"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pdfMiss"
        android:layout_below="@+id/linear_notePdf">
        <Button
            android:id="@+id/btnPDFUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descarcă PDF"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>>
</RelativeLayout>